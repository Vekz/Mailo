<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mailo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/off_white</item>
        <item name="colorPrimaryVariant">@color/off_white_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/orange_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@color/black</item>
    </style>

    <!-- Menu highlight style -->
    <style name="Theme.Mailo.NavMenu" parent="Theme.Mailo">
        <item name="colorPrimary">@color/orange</item>
    </style>

    <!-- High contrast application theme. -->
    <style name="Theme.Mailo.HC" parent="Theme.Mailo">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/hc_gray</item>
        <item name="colorPrimaryVariant">@color/hc_gray_darker</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/hc_orange</item>
        <item name="colorSecondaryVariant">@color/hc_orange_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@color/black</item>
        <item name="android:listDivider">@color/black</item>
    </style>

</resources>